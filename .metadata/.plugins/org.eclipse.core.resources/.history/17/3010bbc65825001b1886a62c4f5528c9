<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<%@taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core"%>
<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
	<script src="http://code.jquery.com/jquery-3.1.1.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/3.0.1/handlebars.js"></script>
	<title>Sent Message</title>
	<style>
		.read{color:blue;}
		.unRead{color:red;}
	</style>
</head>
<body>
	<h1>[Message Send]</h1>
	<table border=1>
		<tr>
			<td width=100>Sender</td>
			<td width=300>${vo.uname}  Point:${vo.point}</td>
		</tr>
		<tr>
			<td width=100>Recipient</td>
			<td>
				<select id="receiver">
					<c:forEach items="${list}" var="v">
						<c:if test="${vo.uid != v.uid}">
							<option value="${v.uid}">${v.uname}</option>
						</c:if>
					</c:forEach>
				</select>
			</td>
		</tr>
		<tr>
			<td width=100>Content</td>
			<td width=300><input type="text" size=30 id="txtMessage"></td>
		</tr>
	</table>
	<button id="btnSend">Send</button>
	<hr>
	<h1>[Sent Message]</h1>
	<table id="tbl" border=1></table>
	<script id="temp" type="text/x-handlebars-template">
		<tr>
			<td width=50>No.</td>
			<td width=150>Recipient</td>
			<td width=300>Content</td>
			<td width=200>Sent Date</td>
			<td width=150>Acknowledgment</td>
		</td>
	{{#each .}}
		<tr>
			<td>{{mid}}</td>
			<td>{{uname}}({{receiver}})</td>
			<td>{{message}}</td>
			<td>{{sendDate}}</td>
			<td>{{{confirm readDate}}}&nbsp;<a href="">삭제</a></td>
		</tr>
	{{/each}}
	</script>
	<script>
		Handlebars.registerHelper("confirm",function(readDate){
			if(!readDate) return "<span class='unRead'>읽지않음</span>";
			else return "<span class='read'>읽음</span>";
		});
	</script>
</body>
<script>
	var sender="${vo.uid}";
	getList();
	function getList(){
		$.ajax({
			type:"get",
			url:"sendList",
			data:{"sender":sender},
			success:function(data){
				var temp=Handlebars.compile($("#temp").html());
		         $("#tbl").html(temp(data));
			}
		});
	}
	
	$("#btnSend").on("click",function(){
		var receiver= $("#receiver").val();
		var message=$("#txtMessage").val();
		if(message==""){
			alert("Please enter your content");
			return
		}
		if(!confirm("Would you like to send a message?")) return;
		$.ajax({
			type:"post",
			url:"insert",
			data:{"sender":sender,"receiver":receiver,"message":message},
			success:function(){
				alert("Your message has been sent.");
				$("#txtMessage").val("");
				getList();
			}
		});
	});
</script>
</html>