<script>
	var ano="${vo.ano}";
	getList();
	function getList(){
		$.ajax({
			type:"get",
			url:"/trade/list",
			data:{"ano":ano},
			success:function(data){
				var temp=Handlebars.compile($("#temp").html());
		         $("#tbl").html(temp(data));
			}
		});
	}
</script>
